libX11 = requires "libX11 >= 1.6"

package = {
	name     = "libXext",
	version  = "1.3.3",
	source   = "$(repo.opensource)/libXext-1.3.3.tar.bz2"
}

use "autotools"

function prepare()
	libX11:install()
	api.download()
	api.unarch()
end

function build()
	prepare()
	autotools.configure()
	autotools.make()
end

function isinstalled()
	return api.isinstalled{
		pc = "xext"
	}
end

function install()
	if not isinstalled() then
		build()
		autotools.make("install")
	end
end
