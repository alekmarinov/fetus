busybox = assert(requires("prebuilt-busybox", "0.0.1"))

package = {
	name = "prebuilt-gcc",
	version  = "0.0.1",
	source   = "$(repo.los)/prebuilt-toolchains/prebuilt-gcc-"..api.system().."-"..lfs.cpuarch()..".tar.bz2",
	archdir = ""
}

function prepare()
	busybox:install()
	api.download()
	api.unarch()
end

function install()
	prepare()
	api.copy(api.makepathdir(path.src.dir, lfs.cpuarch().."-gcc"), path.install.dir)
end
