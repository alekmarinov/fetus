package = {
	name     = "libjpeg",
	version  = "8a",
	source   = "$(repo.opensource)/jpegsr8a.zip",
	archdir  = "jpeg-8a"
}

use "autotools"

function prepare()
	api.download()
	api.unarch()
end

function build()
	prepare()
	autotools.configure()
	autotools.make("all", "-f", "Makefile.unix")
end

function install()
	build()
	return lfs.copy(api.makepath(path.src.dir, package.name..".a"), path.install.lib)
end
