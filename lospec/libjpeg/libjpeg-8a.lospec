package = {
	name     = "libjpeg",
	version  = "8a",
	source   = "$(repo.opensource)/jpegsr8a.zip",
	archdir  = "jpeg-8a"
}

use "autotools"

function prepare()
	api.download()
	api.unarch()
	if lfs.isunixlike() then
		api.dos2unix(path.src.dir)
	end
end

function build()
	prepare()
	autotools.configure()
	autotools.make()
end

function install()
	build()
	autotools.make("install")
end
