busybox = assert(requires("prebuilt-busybox))
libdep = assert(requires("prebuilt-libdep))

package = {
	name = "prebuilt-macosx",
	version = "0.0.1",
	source  = "$(repo.los)/prebuilt-toolchains/prebuilt-macosx-"..api.system().."-"..lfs.cpuarch()..".tar.bz2",
	archdir = lfs.cpuarch().."-macosx"
}

function prepare()
	busybox:install()
	libdep:install()
	api.download()
	api.unarch()
end

function install()
	prepare()
	api.copy(api.makepathdir(path.src.dir), api.makepathdir(path.install.dir, "usr", lfs.cpuarch().."-macosx"))
	api.catfile(api.makepath(path.install.dir, "etc", "profile.d", lfs.cpuarch().."-macosx.ash"), "pathmunge /usr/"..lfs.cpuarch().."-macosx/bin after")
end
