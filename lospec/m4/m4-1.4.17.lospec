package = {
	name     = "m4",
	version  = "1.4.17",
	source   = "$(repo.opensource)/m4-1.4.17.tar.bz2"
}

use "autotools"

function prepare()
	api.download()
	api.unarch()
end

function build()
	prepare()
	autotools.configure()
	autotools.make()
end

function isinstalled()
	return api.isinstalled{
		exec = "m4"
	}
end

function install()
	if not isinstalled() then
		build()
		autotools.install()
		assert(isinstalled(), "something wrong after m4 install") 
	end
end
