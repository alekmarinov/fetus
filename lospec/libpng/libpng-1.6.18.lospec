zlib = assert(requires("zlib == 1.2.8"))

package = {
	name     = "libpng",
	version  = "1.6.18",
	source   = "$(repo.opensource)/libpng-1.6.18.tar.gz"
}

use "cmake"

function prepare()
	api.download()
	api.unarch()
end

function build()
	prepare()
	cmake.build()
end

function install()
	build()
	cmake.install()
end
