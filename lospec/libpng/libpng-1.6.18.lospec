zlib = assert(requires("zlib"))

package = {
	name     = "libpng",
	version  = "1.6.18",
	source   = "$(repo.opensource)/libpng-1.6.18.tar.gz"
}

use "autotools"

function prepare()
	zlib:install()
	api.download()
	api.unarch()
end

function build()
	prepare()
	autotools.configure()
	autotools.make()
end

function install()
	build()
	autotools.make("install")
end
