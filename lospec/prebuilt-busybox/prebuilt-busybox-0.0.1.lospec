minifs = assert(requires("linux-minifs"))

package = {
	name = "prebuilt-busybox",
	version = "1.21.1",
	source  = "http://www.busybox.net/downloads/binaries/1.21.1/busybox-binaries.tar.bz2",
	archdir = ""
}

function prepare()
	minifs:install()
	api.download()
	api.unarch()
end

function install()
	prepare()
	api.copy(api.makepath(path.src.dir, "busybox-"..lfs.cpuarch()), api.makepath(path.install.bin, "busybox"))
end
