package = {
	name     = "videoproto",
	version  = "2.3.1",
	source   = "$(repo.opensource)/videoproto-2.3.1.tar.bz2"
}

use "autotools"

function prepare()
	api.download()
	api.unarch()
end

function build()
	prepare()
	autotools.configure()
	autotools.make()
end

function isinstalled()
	return api.isinstalled{
		pc = "videoproto"
	}
end

function install()
	if not isinstalled() then
		build()
		autotools.make("install")
	end
end
