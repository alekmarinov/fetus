package = {
	name     = "util-macros",
	version  = "0.3",
	source   = "$(repo.opensource)/util-macros-1.17.tar.bz2"
}

use "autotools"

function prepare()
	api.download()
	api.unarch()
end

function build()
	prepare()
	autotools.configure()
	autotools.make()
end

function isinstalled()
	return api.isinstalled{
		pc = "xorg-macros"
	}
end

function install()
	if not isinstalled() then
		build()
		autotools.make("install")
	end
end
