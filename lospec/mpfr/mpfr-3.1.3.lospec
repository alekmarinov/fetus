
package = {
	name     = "mpfr",
	version  = "3.1.3",
	source   = "$(repo.opensource)/mpfr-3.1.3.tar.xz",
	patch = "mpfr-3.1.3-upstream_fixes-1.patch"
}

use "autotools"

function prepare()
	api.download()
	api.unarch()
end

function build()
	prepare()
	api.patch()
	autotools.configure("--enable-thread-safe", "--disable-static")
	autotools.make()
end

function isinstalled()
	return api.isinstalled{
		h = "mpfr.h",
		dynamic = "mpfr"
	}
end

function install()
	if not isinstalled() then
		build()
		autotools.make("install")
		assert(isinstalled(), "something wrong after mpfr install") 
	end
end
