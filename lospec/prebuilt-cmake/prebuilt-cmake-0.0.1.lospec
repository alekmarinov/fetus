make = assert(requires("prebuilt-make"))

package = {
	name = "prebuilt-cmake",
	version  = "0.0.1",
	source   = "$(repo.los)/prebuilt-toolchains/prebuilt-cmake-"..api.system().."-"..lfs.cpuarch()..".tar.bz2",
	archdir = ""
}

function prepare()
	make:install()
	api.download()
	api.unarch()
end

function install()
	prepare()
	api.copy(api.makepathdir(path.src.dir, lfs.cpuarch().."-cmake"), path.install.dir)
end
