package = {
	name     = "xcb-proto",
	version  = "1.7.1",
	source   = "$(repo.opensource)/xcb-proto-1.7.1.tar.bz2"
}

use "autotools"

function prepare()
	api.download()
	api.unarch()
end

function build()
	prepare()
	autotools.configure()
	autotools.make()
end

function isinstalled()
	return api.isinstalled{
		pc = "xcb-proto"
	}
end

function install()
	if not isinstalled() then
		build()
		autotools.make("install")
	end
end
