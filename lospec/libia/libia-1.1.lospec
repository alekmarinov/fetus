jpeg = requires("libjpeg ~> 8a")
use "cmake"
package = {
	name = "libia",
	version = "1.1",
	source  = "$(repo.opensource)/libia-1.1.zip"
}

function prepare()
	jpeg:install()
	api.download()
	api.unarch()
end

function build()
	prepare()
	cmake.build()
end

function install()
	build()
	cmake.install()
end
